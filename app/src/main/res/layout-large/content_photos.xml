<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.crisiscore.www.intexsofttestproject.PhotosActivity"
    tools:showIn="@layout/activity_photos">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photosFragment"
        android:name="com.crisiscore.www.intexsofttestproject.PhotosFragment"
        tools:layout="@layout/photos_fragment"
        android:layout_weight="1"
        android:layout_margin="16dp"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photoDetailsFragment"
        android:name="com.crisiscore.www.intexsofttestproject.PhotoDetailsFragment"
        tools:layout="@layout/photo_details_fragment"
        android:layout_weight="1"/>

</LinearLayout>
